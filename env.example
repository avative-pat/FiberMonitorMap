# Calix SMx Configuration
SMX_API_URL=https://smx.avative.net:18443/rest/v1/fault/alarm
SMX_USERNAME=your_smx_username
SMX_PASSWORD=your_smx_password
SMX_AUTH_HEADER=your_auth_header_value

# Sonar GraphQL Configuration
SONAR_API_URL=https://your-sonar-instance.sonar.software/api/graphql
SONAR_API_KEY=your_sonar_bearer_token

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Application Configuration
POLL_INTERVAL=90
LOG_LEVEL=INFO
ENVIRONMENT=production

# Mapbox Configuration
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token
MAPBOX_STYLE=mapbox://styles/mapbox/dark-v11

# Default Map Configuration
DEFAULT_MAP_CENTER_LAT=40.7128
DEFAULT_MAP_CENTER_LNG=-74.0060
DEFAULT_MAP_ZOOM=10

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_MAPBOX_TOKEN=${MAPBOX_ACCESS_TOKEN}
REACT_APP_REFRESH_INTERVAL=60

# Development Configuration (optional)
DEBUG=false
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000 